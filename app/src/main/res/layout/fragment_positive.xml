<!--            android:background="@color/white" />-->

        <!--        <View-->
<!--            android:id="@+id/liev2"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="2dp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginBottom="60dp"-->
<!--            android:background="@color/white" />-->

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblack" />

    <ImageView
        android:id="@+id/imgVibe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:background="@color/lightblack" />


    <View
        android:id="@+id/linevie"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_above="@+id/linsnads"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/linsnads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/default_left_right_mar"
        android:layout_marginRight="@dimen/default_left_right_mar"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linShare"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/shar_round_vibe"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/black"
                android:textSize="@dimen/font_Normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linSave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shar_round_vibe"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/black"
                android:textSize="@dimen/font_Normal" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linevie"
        android:layout_below="@+id/liev"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_left_right_mar"
                android:layout_marginRight="@dimen/default_left_right_mar"
                android:gravity="center"
                android:text="What do you forgot you are enough?"
                android:textColor="@color/white"
                android:textSize="@dimen/font_vibe_positive" />

            <TextView
                android:id="@+id/mytext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/default_left_right_mar"
                android:layout_marginRight="@dimen/default_left_right_mar"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_vibe_positive" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvVibeDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="April 4, 2020"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/liev"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tvVibeDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

</RelativeLayout>